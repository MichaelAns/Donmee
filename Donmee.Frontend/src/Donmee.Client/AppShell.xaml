<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Donmee.Client.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Donmee.Client.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Other's"
             Route="Wishes">
            <ShellContent Title="Common"
                          Route="CommonWishes"
                          ContentTemplate="{DataTemplate views:WishesView}"/>
            <ShellContent Title="Blitz"
                          Route="BlitzWishes"
                          ContentTemplate="{DataTemplate views:LoginView}"/>
        </Tab>
        <Tab Title="My"
             Route="MyWishes">
            <ShellContent Title="Active"
                          Route="ActiveWishes"
                          ContentTemplate="{DataTemplate views:MyWishesView}"/>
            <ShellContent Title="Completed"
                          Route="CompletedWishes"
                          ContentTemplate="{DataTemplate views:MyWishesView}"/>
        </Tab>
    </TabBar>

</Shell>
