<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Donmee.Client.Views.ProfileView"
             Title="ProfileView">
    <VerticalStackLayout 
        HorizontalOptions="Center"
        VerticalOptions="Center">
        <Label
            Text="Email address:"/>
        <Entry
            Text="Email">
        </Entry>
        <Label
            Text="Password:"/>
        <Entry
            IsPassword="True"
            Text="Password">
        </Entry>
        <Label
            Text="Phone number:"/>
        <Entry
            Text="Phone number">
        </Entry>
        <Label
            Text="Name:"/>
        <Entry
            Text="Name">
        </Entry>
        <Label
            Text="Second name:"/>
        <Entry
            Text="Second name">
        </Entry>
        <!--BUTTONS-->
        <Button
            Text="Save"/>
        <Button
            Text="Cancel"/>
    </VerticalStackLayout>
</ContentPage>