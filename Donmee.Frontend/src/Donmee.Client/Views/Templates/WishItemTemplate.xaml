<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Donmee.Client.Views.Templates.WishItemTemplate">
    <ContentView.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="150"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <!--IMAGE-->
            <Image
                Grid.Row="0"
                Source="{Binding ImagePath}"
                Margin="0, 5"/>
            <!--NAME-->
            <Label
                Grid.Row="1"
                Text="{Binding Name}"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                FontSize="Medium"
                Margin="0, 0, 0, 20"/>
            <!--Separator-->
            <Line
                Stroke="Black"
                X1="500"/>
        </Grid>
    </ContentView.Content>
</ContentView>
