<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Donmee.Client.ViewModels"
             xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Donmee.Client.Views.RegisterView"
             x:DataType="viewmodels:RegisterViewModel"
             Title="REGISTER">
    <VerticalStackLayout
        HorizontalOptions="Center"
        VerticalOptions="Center">
        <Label
            Style="{StaticResource AuthLabelStyle}"
            Text="Enter your Email address:"/>
        <Entry
            Style="{StaticResource AuthEntryStyle}"
            Text="{Binding Email.Value}">
            <Entry.Behaviors>
                <mct:EventToCommandBehavior
                    EventName="TextChanged"
                    Command="{Binding ValidateCommand}"/>
            </Entry.Behaviors>
        </Entry>
        <Label
            Style="{StaticResource AuthLabelStyle}"
            Text="Enter the password:"/>
        <Entry
            Style="{StaticResource AuthEntryStyle}"
            IsPassword="True"
            Text="{Binding Password.Value}">
            <Entry.Behaviors>
                <mct:EventToCommandBehavior
                    EventName="TextChanged"
                    Command="{Binding ValidateCommand}"/>
            </Entry.Behaviors>
        </Entry>
        <Label
            Style="{StaticResource AuthLabelStyle}"
            Text="Repeat the password:"/>
        <Entry
            Style="{StaticResource AuthEntryStyle}"
            IsPassword="True"
            Text="{Binding RepeatPassword.Value}">
            <Entry.Behaviors>
                <mct:EventToCommandBehavior
                    EventName="TextChanged"
                    Command="{Binding ValidateCommand}"/>
            </Entry.Behaviors>
        </Entry>
        <Label
            Style="{StaticResource AuthLabelStyle}"
            Text="Enter your phone number:"/>
        <Entry
            Style="{StaticResource AuthEntryStyle}"
            Text="{Binding Phone.Value}">
            <Entry.Behaviors>
                <mct:EventToCommandBehavior
                    EventName="TextChanged"
                    Command="{Binding ValidateCommand}"/>
            </Entry.Behaviors>
        </Entry>
        <Label
            Style="{StaticResource AuthLabelStyle}"
            Text="Enter your name:"/>
        <Entry
            Style="{StaticResource AuthEntryStyle}"
            Text="{Binding Name.Value}">
            <Entry.Behaviors>
                <mct:EventToCommandBehavior
                    EventName="TextChanged"
                    Command="{Binding ValidateCommand}"/>
            </Entry.Behaviors>
        </Entry>
        <Label
            Style="{StaticResource AuthLabelStyle}"
            Text="Enter your second name:"/>
        <Entry
            Style="{StaticResource AuthEntryStyle}"
            Text="{Binding SecondName.Value}">
            <Entry.Behaviors>
                <mct:EventToCommandBehavior
                    EventName="TextChanged"
                    Command="{Binding ValidateCommand}"/>
            </Entry.Behaviors>
        </Entry>
        <Button 
            Style="{StaticResource AuthButtonStyle}"
            Text="Register"
            Command="{Binding SignUpCommand}"/>
        <Label
            Text="{Binding ErrorLabel}"
            IsVisible="{Binding IsError}"
            BackgroundColor="{StaticResource ErrorColor}"/>
    </VerticalStackLayout>
</ContentPage>