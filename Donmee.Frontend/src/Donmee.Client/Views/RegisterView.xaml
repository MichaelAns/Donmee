<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Donmee.Client.Views.RegisterView"
             Title="RegisterView">
    <VerticalStackLayout
        HorizontalOptions="Center"
        VerticalOptions="Center">
        <Label
            Text="Enter your Email address:"/>
        <Entry
            Text="Email">
        </Entry>
        <Label
            Text="Enter the password:"/>
        <Entry
            IsPassword="True"
            Text="Password">
        </Entry>
        <Label
            Text="Repeat the password:"/>
        <Entry
            IsPassword="True"
            Text="Password">
        </Entry>
        <Label
            Text="Enter your phone number:"/>
        <Entry
            Text="Phone number">
        </Entry>
        <Label
            Text="Enter your name:"/>
        <Entry
            Text="Name">
        </Entry>
        <Label
            Text="Enter your second name:"/>
        <Entry
            Text="Second name">
        </Entry>
        <Button 
            Text="Register"/>
    </VerticalStackLayout>
</ContentPage>